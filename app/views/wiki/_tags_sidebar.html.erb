<% unless sidebar_tags.empty? %>
  <%= stylesheet_link_tag 'jquery.tagit.css', plugin: 'redmine_tags' %>
  <%= stylesheet_link_tag 'redmine_tags', plugin: 'redmine_tags' %>
  <% if @page.nil? -%>
    <h3><%= l :project_tags %></h3>
  <% else %>
    <% if @page.title == 'Wiki' -%>
      <h3><%= l :project_tags %></h3>
    <% else -%>
      <h3><%= l :page_tags %></h3>
    <% end -%>
  <% end -%>
  <%= render_sidebar_tags %>
<% end %>
